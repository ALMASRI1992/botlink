{
  "manifest_version": 3,
  "name": "LinkedIn Auto Apply",
  "version": "1.0",
  "description": "Automate LinkedIn job applications via Python API",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://autoapply-linkedin-f058600e4815.herokuapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.jpg"
  }
}